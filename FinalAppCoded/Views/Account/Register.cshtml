@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="signup__area po-rel-z1 pt-100 pb-145">
    <div class="sign__shape">
      
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xxl-8 offset-xxl-2 col-xl-8 offset-xl-2">
                <div class="section__title-wrapper text-center mb-55">
                    <h2 class="section__title">Register User </h2>
                    <p>Create Your Account.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                <div class="sign__wrapper white-bg">
                    <div class="sign__header mb-35">
                        
                    </div>
                    <div class="sign__form">
                        <form method="post" asp-action="Register" asp-controller="Account">
                            <div class="sign__input-wrapper mb-25">
                                <h5><label asp-for="Email"></label></h5>
                                <div class="sign__input">
                                    <input asp-for="Email" placeholder="Enter Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <i class="fal fa-user"></i>
                                </div>
                            </div>
                            <div class="sign__input-wrapper mb-25">
                                <h5><label asp-for="ConfirmEmail"></label></h5>
                                <div class="sign__input">
                                    <input asp-for="ConfirmEmail" placeholder="Enter Email">
                                    <span asp-validation-for="ConfirmEmail" class="text-danger"></span>

                                    <i class="fal fa-user"></i>
                                </div>
                            </div>
                            <div class="sign__input-wrapper mb-25">
                                <h5> <label asp-for="Password"></label></h5>
                                <div class="sign__input">
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                    <i class="fal fa-lock"></i>
                                </div>
                            </div>
                            <div class="sign__input-wrapper mb-25">
                                <h5> <label asp-for="ConfirmPassword"></label></h5>
                                <div class="sign__input">
                                    <input asp-for="ConfirmPassword" placeholder="Password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    <i class="fal fa-lock"></i>
                                </div>
                            </div>

                            <div class="sign__input-wrapper mb-25">
                                <h5> <label asp-for="Mobile"></label></h5>
                                <div class="sign__input">
                                    <input asp-for="Mobile" placeholder="Mobile Number">
                                    <span asp-validation-for="Mobile" class="text-danger"></span>

                                    <i class="fal fa-mobile"></i>
                                </div>
                            </div>

                           
                            <input type="submit" value="Register" class="e-btn w-100">
                            <div class="sign__new text-center mt-20">
                                <p>Already in Markit ? <a asp-action="Login"> Sign In</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>